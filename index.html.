  <script>
    function createHearts() {
      for(let i=0; i<20; i++) {
        let h = document.createElement('div');
        h.className = 'bg-heart';
        h.innerHTML = 'â¤ï¸';
        h.style.left = Math.random() * 100 + 'vw';
        h.style.animationDelay = Math.random() * 5 + 's';
        document.body.appendChild(h);
      }
    }
    createHearts();

    function moveNo() {
      const no = document.getElementById("no");
      no.style.top = Math.random() * (window.innerHeight - 50) + "px";
      no.style.left = Math.random() * (window.innerWidth - 100) + "px";
    }

    function celebrate() {
      document.getElementById('loveSong').play();
      document.getElementById('askPart').style.display = 'none';
      document.getElementById('answerPart').style.display = 'block';
      document.body.style.background = "#ffccd5";
    }
  </script>
